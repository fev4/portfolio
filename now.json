{
  "version": 2,
  "public": true,
  "name": "portfolio",
  "builds": [
    {
      "src": "packages/web/next-main/package.json",
      "use": "@now/next"
    },
    {
      "src": "packages/web/next-blog/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "packages/api/apollo/index.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/blog(.*)",
      "dest": "packages/web/next-blog$1"
    },
    {
      "src": "/graphql(.*)",
      "dest": "packages/api/apollo$1"
    },
    {
      "src": "/(.*)",
      "dest": "packages/web/next-main/$1"
    }
  ],
  "regions": ["gru"]
}