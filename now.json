{
  "version": 2,
  "public": true,
  "name": "portfolio",
  "builds": [
    {
      "src": "www/index/package.json",
      "use": "@now/next"
    },
    {
      "src": "www/blog/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public"
      }
    },
    {
      "src": "api/apollo/index.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/blog(.*)",
      "dest": "/www/blog$1"
    },
    {
      "src": "/graphql(.*)",
      "dest": "/api/apollo$1"
    },
    {
      "src": "/(.*)",
      "dest": "/www/index/$1"
    }
  ],
  "regions": ["all"]
}