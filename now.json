{
  "version": 2,
  "public": true,
  "name": "portfolio",
  "builds": [
    {
      "src": "www/index/package.json",
      "use": "@now/next"
    },
    {
      "src": "www/blog/package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "build": {
    "env": {
      "NPM_CONFIG_FONTAWESOME_PRO_REPO_KEY": "@npm_config_fontawesome_pro_repo_key"
    }
  },
  "routes": [
    {
      "src": "/blog/(.*)",
      "dest": "/www/blog/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/www/index/$1"
    }
  ],
  "regions": ["all"]
}